generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  memes     Meme[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Meme {
  id        String   @id @default(cuid())
  topText     String?
  bottomText String?
  fontSize   Int
  fontColor  String
  description String?
  tags        String[]
  imageUrl  String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


